<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vbox" alignment="CENTER" minHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task5.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   <BorderPane fx:id="panee" prefHeight="384.0" prefWidth="460.0">
      <top>
      
      
               <Label fx:id="label" prefHeight="51.0" prefWidth="228.0" wrapText="true" BorderPane.alignment="CENTER">
                  <font>
                     <Font size="35.0" />
                  </font>
            <BorderPane.margin>
               <Insets top="11.0" />
            </BorderPane.margin>
               </Label>
      </top></BorderPane>
   <HBox maxWidth="450.0" minHeight="76.0" minWidth="100.0" prefHeight="92.0" prefWidth="450.0">
         <TextField fx:id="textField" prefHeight="34.0" prefWidth="188.0">
            <HBox.margin>
               <Insets left="124.0" right="145.0" />
            </HBox.margin>
         <font>
            <Font size="15.0" />
         </font></TextField>
         <Button minHeight="20.0" mnemonicParsing="false" onAction="#onPlay" prefHeight="34.0" prefWidth="37.0" text="►">
            <HBox.margin>
               <Insets left="-320.0" top="39.0" />
            </HBox.margin>
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPause" prefHeight="34.0" prefWidth="37.0" text="▌▐">
            <HBox.margin>
               <Insets left="3.0" top="39.0" />
            </HBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onBack" prefHeight="34.0" prefWidth="38.0" text="◄◄">
            <HBox.margin>
               <Insets left="3.0" top="39.0" />
            </HBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onForward" prefHeight="36.0" prefWidth="37.0" text="►►">
            <HBox.margin>
               <Insets left="2.0" top="38.0" />
            </HBox.margin></Button>
         <Button mnemonicParsing="false" onAction="#onClear" prefHeight="72.0" prefWidth="82.0" style="-fx-background-radius: 50px;" text="☺">
            <HBox.margin>
               <Insets left="-270.0" top="-1.0" />
            </HBox.margin>
         <font>
            <Font size="33.0" />
         </font>
         </Button>
      <Label prefHeight="36.0" prefWidth="49.0" text="Цвет текста" wrapText="true">
         <HBox.margin>
            <Insets left="226.0" top="13.0" />
         </HBox.margin>
      </Label>
      <ColorPicker fx:id="color" prefHeight="26.0" prefWidth="35.0">
         <HBox.margin>
            <Insets left="1.0" top="23.0" />
         </HBox.margin>
      </ColorPicker>
      <Label prefHeight="46.0" prefWidth="64.0" text="Размер шрифта" wrapText="true">
         <HBox.margin>
            <Insets left="-92.0" top="42.0" />
         </HBox.margin>
      </Label>
      <Spinner fx:id="spinner" editable="true" prefHeight="26.0" prefWidth="55.0">
         <HBox.margin>
            <Insets left="-8.0" top="54.0" />
         </HBox.margin>
      </Spinner>

   </HBox>
</VBox>
